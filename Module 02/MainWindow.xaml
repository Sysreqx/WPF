                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0">Button 2</Button>
                    <Button Grid.Column="1">Button 3</Button>
                </Grid>

                <!--bottom left-->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
