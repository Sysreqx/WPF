<Window x:Class="EMailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EMailSender"
        mc:Ignorable="d"
        Title="NEW MESSAGE" Height="700" Width="800">
    <StackPanel>
        <TextBox x:Name="Recipient"
                 FontSize="20"
                    Padding="10">To </TextBox>
        <TextBox x:Name="cc"
                    Padding="10"
                 FontSize="20">CC </TextBox>
        <TextBox x:Name="bcc"
                    Padding="10"
                 FontSize="20">BCC </TextBox>
        <TextBox x:Name="Subject"
                 FontSize="20"
                    Padding="10">Subject </TextBox>
        <TextBox x:Name="text"
                 Height="300"
                 FontSize="20"
                 Padding="10">Your Message here... </TextBox>

        <Button x:Name="send"
                    Padding="30"
                    Click="sndMSG"
                 FontSize="20">Send</Button>
        <Label x:Name="lblMessage"
                    Padding="10"
                 FontSize="20"
               >Result message here</Label>
    </StackPanel>
</Window>
